@using TST.BaseProject.ViewModels.HomeViewModels
@model ProductViewModel

<div id="detail-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Detalle del Producto
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-lg">
                <div class="form-group m-form__group row text-center">
                    <div class="col-lg-12 m-form__group-sub">
                        <label  class="required-form-label"></label>
                        <img id="img" style="width: 200px; height:200px;" src="/assets/css/images/img-default.png">
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="col-lg-12 m-form__group-sub">
                        <label asp-for="Name" class="required-form-label">Nombre</label>
                        <input asp-for="Name" type="text" class="form-control m-input" disabled>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="col-lg-12 m-form__group-sub">
                        <label asp-for="Description" class="required-form-label">Descripción</label>
                        <textarea asp-for="Description" type="text" class="form-control m-input" disabled></textarea>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="col-lg-6 m-form__group-sub">
                        <label asp-for="Amount" class="required-form-label">Precio</label>
                        <input asp-for="Amount" type="text" class="form-control m-input" disabled>
                    </div>
                    <div class="col-lg-6 m-form__group-sub">
                        <label asp-for="Category" class="required-form-label">Categoría</label>
                        <input asp-for="Category" type="text" class="form-control m-input" disabled>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
